Ex1
using namespace std;
#include <iostream>
int compare(char* left, char * right) {
	while (*left != '\0' || *right != '\0') {
		if (*left < *right)
			return -1;
		else if (*left > *right)
			return 1;
		else  {
			left++;
			right++;
		}
	}
	return 0;
}
int main() {
	char* one = "one";
	char* two = "two";
	int check = compare(one, two);
	if (check < 0) cout << one << " is before " << two << endl;
	else if (check > 0) cout << one << " is after " << two << endl;
	else cout << one << " and " << two << " are equal" << endl;
}
