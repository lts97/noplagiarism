Ex 2
#include <iostream>
using namespace std;
int myStrlen(char* cstring) {
	int counter = 0;
	while (*cstring != '\0') {
		cout << *cstring;
		counter++;
		*cstring++;
		
	}
	return counter;
}

int main(){
	char lol[] = {"Hello World"};
	cout << endl << myStrlen(lol) << endl;
}
