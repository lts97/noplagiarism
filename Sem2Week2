2_1 .C

#include <iostream>
using namespace std;
int main()
{
	int number;
	cin >> number;
	for (int i = 0; i < number; i++)
	{
		for (int k = number - 1-i; k > 0; k--) {
			cout << " ";
		}
		for (int j = 0; j < i; j++)
		{
			
			cout << "*";
		}
		cout << endl;
	}
}

2_3
#include <iostream>
using namespace std;
int main(){
	int a, b,sum=0;
	cout << "enter a: ";
	cin >> a;
	cout << "enter b: ";
	cin >> b;

	if (a < b)
	{
		for (int i = a; i <= b; i++) {
			sum += i;
		}
	}
	else
	{
		for (int i = b; i <= a; i++) {
			sum += i;
		}
	}
	cout << sum;
}
