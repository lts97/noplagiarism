2_1 .C

#include <iostream>
using namespace std;
int main()
{
	int number;
	cin >> number;
	for (int i = 0; i < number; i++)
	{
		for (int k = number - 1-i; k > 0; k--) {
			cout << " ";
		}
		for (int j = 0; j < i; j++)
		{
			
			cout << "*";
		}
		cout << endl;
	}
}
