2_4
#include <iostream>
using namespace std;
int main() {
	int a=0, b, counter = 0;
	cout << "enter a: ";
	cin >> a;
	cout << "enter b: ";
	cin >> b;

	if (a < b)
	{
		for (int i = a; i <= b; i++) {
			counter = 0;
			for (int num = i; num >= 1; num--) {
				if (i % num == 0) {
					counter++;
				}
			}
				if (counter == 2)
					cout << i << " ";
		}
	}
	else
	{
		for (int i = b; i <= a; i++) {
			cout << a;
		}
	}
	
}

