Ex 3
#include <iostream>
using namespace std;
int main(int argc, char* argv[]) {
	cout << "Enter a number: ";
	int n, sum;
	sum = 1;
	cin >> n;
	for (int i = n; i > 0; i--) {
		sum = sum * i;
	}
	cout << sum << endl;
}
