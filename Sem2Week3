Ex 4
#include <iostream>
using namespace std;

int main()
{
	cout << "Enter a number: ";
	int n;
	cin >> n;
	if (n < 0) {
		cout << "Number must be positive, enter again: ";
		cin >> n;
	}
	for (int i = 0; i < n; i++) {
		for (int j = 0; j < n; j++) {
			if (j == 0 || j == n - 1 || i == 0 || i == n - 1)
				cout << "*";
			else
				cout << " ";
		}
		cout << endl;
	}
}
